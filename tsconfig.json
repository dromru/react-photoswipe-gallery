{
  "compilerOptions": {
    "esModuleInterop": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "jsx": "react",
    "declaration": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": false,
    "target": "ES5",
    "lib": ["DOM", "ES5", "ES2015.Collection", "ES2015.Iterable"],
    "rootDirs": ["src", "stories"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/__tests__"]
}
